<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DiaryPart$PlaceholderFragment">


    <ImageView
        android:id="@+id/tab2ImageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/puzzle" />

    <EditText
        android:id="@+id/editTab2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/tab2Btn"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Write Diary"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLength="100" />

    <Button
        android:id="@+id/tab2Btn"
        android:background="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:textColor="@color/purple"
        android:textSize="20dp"
        android:text="Next" />

    <TextView
        android:id="@+id/textLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tab2ImageView"
        android:text="/100"
        android:textColor="@color/colorAccent"
        android:textSize="14dp" />
</RelativeLayout>