<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailText">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/sample9" />

    <EditText
        android:id="@+id/editTextDetail"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageDetail"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnDetailRe"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textSize="16dp"
        android:textColor="@color/DimGray"
        android:background="@drawable/background_rec1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="수정" />

    <Button
        android:id="@+id/btnDetailDone"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:textSize="15dp"
        android:background="@drawable/background_rec1"
        android:textColor="@color/DimGray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="닫기" />

</RelativeLayout>