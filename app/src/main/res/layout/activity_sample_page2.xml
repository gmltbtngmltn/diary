<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SamplePage2"
    android:background="@color/black">

    <EditText
        android:id="@+id/editSample2Title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/background_tab3"
        android:ems="10"
        android:hint="Title"
        android:textColor="@color/Aqua"
        android:inputType="text"
        android:textColorHint="@color/Aqua"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSample2Diary"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="일기"
        android:textColor="@color/Aqua"
        android:textColorHint="@color/Aqua"
        android:textSize="20dp"
        android:gravity="top"
        android:background="@drawable/background_tab3"
        android:inputType="textMultiLine|textNoSuggestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSample2Title" />

    <Button
        android:id="@+id/btnSample2Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="SAVE"
        android:textSize="20dp"
        android:textColor="@color/Aqua"
        android:background="@drawable/background_tab3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSample2Diary" />

    <TextView
        android:id="@+id/textDateSample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Aqua"
        android:textSize="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSample2Diary" />
</android.support.constraint.ConstraintLayout>